{
  "expo": {
    "name": "AIdeaVoice",
    "slug": "aideavoice",
    "version": "1.0.0",
    "icon": "./assets/aideavoiceapp-icon.png",
    "userInterfaceStyle": "automatic",
    "owner": "thomyorke34",
    "extra": {
      "firebase": {
        "apiKey": "YOUR_API_KEY",
        "authDomain": "YOUR_AUTH_DOMAIN",
        "projectId": "YOUR_PROJECT_ID",
        "storageBucket": "YOUR_STORAGE_BUCKET",
        "messagingSenderId": "YOUR_MESSAGING_SENDER_ID",
        "appId": "YOUR_APP_ID",
        "measurementId": "YOUR_MEASUREMENT_ID"
      },
      "eas": {
        "projectId": "45ec7bc8-9322-483c-8389-efb882ddc8c6"
      }
    },
    "ios": {
      "bundleIdentifier": "com.thomyorke34.aideavoice",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires access to the microphone to record audio.",
        "NSLocationWhenInUseUsageDescription": "This app requires access to your location for better functionality.",
        "NSLocationAlwaysUsageDescription": "This app requires background location access to improve the user experience."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/aideavoiceapp-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.thomyorke34.aideavoice"
    },
    "plugins": [
      [
        "expo-file-system",
        {
          "filePermission": "read-write"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "newArchEnabled": true
  }
}